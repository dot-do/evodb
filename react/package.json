{
  "name": "@evodb/react",
  "version": "0.1.0-rc.1",
  "description": "React hooks for EvoDB - data fetching and mutations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "evodb",
    "react",
    "hooks",
    "data-fetching",
    "mutations"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "directory": "react"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.0.0",
    "jsdom": "^25.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0"
  },
  "sideEffects": false
}
