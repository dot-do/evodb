{
  "name": "evodb",
  "version": "0.1.0",
  "private": true,
  "description": "Distributed Lakehouse for Cloudflare Workers",
  "keywords": [
    "cloudflare",
    "workers",
    "durable-objects",
    "lakehouse",
    "analytics",
    "edge",
    "r2",
    "columnar"
  ],
  "author": ".do",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/evodb.git"
  },
  "workspaces": [
    "core",
    "rpc",
    "lakehouse",
    "writer",
    "reader",
    "query",
    "edge-cache",
    "lance-reader",
    "snippets-chain",
    "snippets-lance",
    "benchmark",
    "codegen",
    "e2e",
    "test-utils"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:unit": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "test:e2e": "vitest run --project=e2e",
    "clean": "pnpm -r exec rm -rf dist coverage node_modules",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260120.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "typescript": "^5.4.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
